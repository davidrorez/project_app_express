=form_for @user, validates: true do |f|
  -if @user.errors.any?
    .card.mx-4
      %div{style: 'color: red'}
        %h2
          = t('application.can_not_be_saved')
        %ul
          - @user.errors.each do |error|
            %li= error.full_message

  .form-group.mx-4.text-center
    = f.label :email, class: "form-label required"
    .div.w-100.text-center.mx-auto(style="max-width: 400px; margin: 0 auto;")
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"

  .form-group.mx-4.text-center.mt-2
    = f.label :password, class: "form-label required"
    .div.w-100.text-center.mx-auto(style="max-width: 400px; margin: 0 auto;")
      = f.password_field :password, autocomplete: "new-password", class: "form-control"

  .form-group.mx-4.text-center.mt-2
    = f.label :password_confirmation, class: "form-label required"
    .div.w-100.text-center.mx-auto(style="max-width: 400px; margin: 0 auto;")
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"

  .form-group.mx-4.text-center.mt-2
    = f.label :role, class: "form-label required"
    .div.w-100.text-center.mx-auto(style="max-width: 400px; margin: 0 auto;")
      = f.select(:role, options_for_select(role, @user.role), {prompt: t('application.select')}, class: "form-control")

  .row.mt-4
    .col.text-center
      .div.w-100.text-center.mx-auto(style="max-width: 400px; margin: 0 auto;")
        = link_to t('application.back'), users_path, class: "btn btn-secondary", style: "width: 45%; display: inline-block;"
        = button_tag t('application.save'), class: "btn btn-primary", style: "width: 45%; display: inline-block; margin-left: 10px;"

