%h2.text-center.mt-2
  = t('application.log_in')

= form_for(@user, as: :user, url: session_path(:user)) do |f|
  .form-group.text-center
    = f.label :email, class: "form-label required"
    .div.w-100.text-center.mx-auto(style="max-width: 400px; margin: 0 auto;")
      = f.email_field :email, autofocus: true, class: "form-control", style: "width: 100%;", required: true

  .form-group.mt-2.text-center
    = f.label :password, class: "form-label required"
    .div.w-100.text-center.mx-auto(style="max-width: 400px; margin: 0 auto;")
      = f.password_field :password, autofocus: true, class: "form-control", style: "width: 100%;", required: true

  - if devise_mapping.rememberable?
    .form-group.text-center
      .form-check.d-flex.align-items-center
      .div.w-100.text-center.mx-auto(style="max-width: 400px; margin: 0 auto; margin-top: -1rem;")
        = f.check_box :remember_me
        = f.label :remember_me

  .row.mt-4
    .col.text-center
      .div.w-100.text-center.mx-auto(style="max-width: 400px; margin: 0 auto;")
        = button_tag t('application.log_in'), class: "btn btn-primary btn-block", style: "width: 100%;"
        = render "users/shared/links"

        - if flash[:alert].present?
          .alert.alert-danger.text-center.mt-2
            %p= flash[:alert]
