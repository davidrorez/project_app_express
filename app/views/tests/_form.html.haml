=form_for @test, validates: true do |f|
  -if @test.errors.any?
    .card.mx-4
      %div{style: 'color: red'}
        %h2
          = t('application.can_not_be_saved')
        %ul
          -  @test.errors.each do |error|
            %li= error.full_message

  .form-group.mx-4 
    = f.label :name, class: "form-label required"
    .div.w-25 
      = f.text_field :name, autofocus: true, class: "form-control"

  .form-group.mx-4 
    = f.label :year, class: "form-label required"
    .div.w-25 
      = f.text_field :year, autofocus: true, class: "form-control"

    .row.mt-4.mx-5
      .d-grid.gap-2.d-md-block.text-start
        = link_to t('application.back'), tests_path, class: "btn btn-secondary btn-block" 
        = button_tag t('application.save'), class: "btn btn-outline-primary btn-block"