= form_for @client, validate: true do |f|
  - if @client.errors.any?
    .card.mx-4
      %div{style: 'color: red'}
        %h2
          = t('application.can_not_be_saved')
        %ul
          - @client.errors.each do |error|
            %li= error.full_message
    = button_to t('application.delete'), client, method: :delete, class: "dropdown-item", data: { confirm: t('application.confirm_delete') }


  .form-group.mx-4
    = f.label :state
    .div.w-25
      = f.select :state, options_for_select(stateClient, @client.state), { prompt: t('application.select') }, class: "form-control", required: true
      
  .row.mt-4.mx-5
    .d-grid.gap-2.d-md-block.text-start
      = link_to t('application.back'), clients_path, class: "btn btn-secondary btn-block"
      = f.submit t('application.save'), class: "btn btn-outline-primary btn-block"
