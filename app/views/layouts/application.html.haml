%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ExpressApp
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js'
    = javascript_importmap_tags
    %style
      :plain
        @media (min-width: 992px) {
          .sidebar {
            position: fixed;
            height: 100vh;
          }
        }
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        %a.navbar-brand{:href => "/"} Administrador
        %button.navbar-toggler{"type" => "button", "data-bs-toggle" => "collapse", "data-bs-target" => "#navbarNav", "aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation"}
          %span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          %ul.navbar-nav.ms-auto
            %li.nav-item
              %a.nav-link{:href => "/users/login"} Iniciar sesion
            %li.nav-item
              %a.nav-link{:href => "#"} Usuarios
            %li.nav-item
              = button_to "Cerrar sesiÃ³n", destroy_user_session_path, method: :delete, class: "btn btn-transparent"

    .container-fluid
      .row
        %nav.col-12.col-md-3.col-lg-2.d-md-block.bg-dark.sidebar
          %div.sidebar-sticky
            %ul.nav.flex-column
              %li.nav-item
                %a.nav-link{:href => "/"} Inicio
              %li.nav-item
                %a.nav-link{:href => "#"} Usuarios
              %li.nav-item
                %a.nav-link{:href => "#"} Clientes
              %li.nav-item
                %a.nav-link{:href => "#"} Pedidos
              %li.nav-item
                %a.nav-link{:href => "/tests"} Prueba
        .col-12.col-md-9.ms-sm-auto.col-lg-10.px-md-4
          
