!!!
%html(lang="en")

  %head
    %meta(charset="UTF-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet")
    %link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
    %script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js")
    %link{:rel => "stylesheet", :href => "https://cdn.jsdelivr.net/npm/trix@1.3.1/dist/trix.min.css"}
    %script{:src => "https://cdn.jsdelivr.net/npm/trix@1.3.1/dist/trix.min.js", :defer => true}
    = stylesheet_link_tag "styles.css"
    %title AppExpress

  %body
    .d-flex#wrapper
      .bg-white#sidebar-wrapper
        .sidebar-heading.text-center.py-4.primary-text.fs-4.fw-bold.text-uppercase.border-bottom
          %i.fas.fa-user-secret.me-2 Admin
        .list-group.list-group-flush.my-3
          %a.list-group-item.list-group-item-action.bg-transparent.second-text.active{:href => "/"}
            %i.fas.fa-tachometer-alt.me-2 Inicio
          %a.list-group-item.list-group-item-action.bg-transparent.second-text.fw-bold{:href => "/dishes"}
            %i.fas.fa-utensils.me-2 Platos
          %a.list-group-item.list-group-item-action.bg-transparent.second-text.fw-bold{:href => "/users"}
            %i.fas.fa-user.me-2 Usuarios
          %a.list-group-item.list-group-item-action.bg-transparent.second-text.fw-bold{:href => "/clients"}
            %i.fas.fa-user-circle.me-2 Clientes
          %a.list-group-item.list-group-item-action.bg-transparent.second-text.fw-bold{:href => "/orders"}
            %i.fas.fa-receipt.me-2 Pedidos
      #page-content-wrapper
        %nav.navbar.navbar-expand-lg.navbar-light.bg-transparent.py-4.px-4
          .d-flex.align-items-center
            %i.fas.fa-align-left.primary-text.fs-4.me-3#menu-toggle
            %h2.fs-2.m-0 Administrador

          %button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
            %span.navbar-toggler-icon

          .collapse.navbar-collapse#navbarSupportedContent
            %ul.navbar-nav.ms-auto.mb-2.mb-lg-0
              %li.nav-item.dropdown
                %a.nav-link.dropdown-toggle.second-text.fw-bold(href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false")
                  %i.fas.fa-user.me-2
                    = current_user.email
                %ul.dropdown-menu(aria-labelledby="navbarDropdown")
                  %li
                    = button_to "Salir", destroy_user_session_path, method: :delete, class: "dropdown-item"

        .container-fluid.px-4
          .row.g-3.my-2
            = yield
    #page-content-wrapper
      :javascript
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
  

