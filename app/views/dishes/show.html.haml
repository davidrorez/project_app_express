%h1.text-center.mt-2
  = t('activerecord.modules.dish.one')

.row.justify-content-center
  .col-md-8.mx-auto
    .card.m-4
      .card-body
        %h5.card-title
          = t('activerecord.attributes.dish.name')
        %p.card-text= @dish.name
        %h5.card-title
          = t('activerecord.attributes.dish.description')
        %p.card-text=@dish.description
        %h5.card-title
          = t('activerecord.attributes.dish.price')
        %p.card-text=@dish.price
        %h5.card-title
          = t('activerecord.attributes.dish.photo')
        %p.card-text
          - if @dish.photo.present?
            = image_tag url_for(@dish.photo), style: 'max-width: 150px; max-height: 150px;'
          - else
            %p No hay foto a√∫n
        %h5.card-title
          = t('application.state')
        %p.card-text=@dish.available? ? t('activerecord.attributes.dish.available') : t('application.not_available')

.row.mt-4.text-center
  .col-md-12
    = link_to t('application.back'), dishes_path, class: "btn btn-secondary btn-block"
