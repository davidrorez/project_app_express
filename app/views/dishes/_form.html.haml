=form_for @dish, validates: true do |f|
  -if @dish.errors.any?
    .card.mx-4
      %div{style: 'color: red'}
        %h2
          = t('application.can_not_be_saved')
        %ul
          -  @dish.errors.each do |error|
            %li= error.full_message

  .form-group.mx-4 
    = f.label :name, class: "form-label required"
    .div.w-25 
      = f.text_field :name, autofocus: true, class: "form-control"

  .form-group.mx-4 
    = f.label :description, class: "form-label required"
    .div.w-25 
      = f.text_area :description, autofocus: true, class: "form-control"

  .form-group.mx-4 
    = f.label :price, class: "form-label required"
    .div.w-25 
      = f.text_field :price, autofocus: true, class: "form-control"

  .form-group.mx-4 
    = f.label :photo, class: "form-label required"
    .div.w-25 
      = f.file_field :photo, autofocus: true, class: "form-control"

  .field.mx-4.mt-3
    = f.label :available
    = f.check_box :available
      
    .row.mt-4.mx-5
      .d-grid.gap-2.d-md-block.text-start
        = link_to t('application.back'), dishes_path, class: "btn btn-secondary btn-block" 
        = button_tag t('application.save'), class: "btn btn-outline-primary btn-block"

